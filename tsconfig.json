{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./src",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "importHelpers": true,
    "outDir": "lib",
    "pretty": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
