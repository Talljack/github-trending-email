{
  "name": "github-trending-email",
  "private": "true",
  "version": "0.0.1",
  "description": "Github trending repos send to your email every day",
  "main": "lib/index.js",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "ncc build src/index.ts -o lib -m",
    "lint": "eslint src/**",
    "format": "prettier --write src/** action.yml README.md",
    "format:check": "prettier --check src/** action.yml README.md",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vercel/ncc": "^0.38.1",
    "bun-types": "latest",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "moment": "^2.29.4"
  },
  "license": "MIT",
  "keywords": [
    "github-trending",
    "github repo",
    "github email",
    "github action"
  ],
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun run format"
  },
  "engines": {
    "node": ">=18"
  }
}
